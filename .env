# Environment Type (development/production)
ENV_TYPE=development

# Hop Configuration
HOP_VERSION=2.9.0
HOP_LOG_LEVEL=Basic
HOP_RUNTIME=local
HOP_PROJECT_NAME=docker_teste
HOP_WEB_PORT=8080
HOP_FILE_PATH=/files/pipelines/pipeline1.hpl
HOP_PROJECT_FOLDER=/files
HOP_SHARED_JDBC_FOLDERS=/files/drivers
HOP_RUN_CONFIG=local
HOP_AUTO_RUN_PIPELINE=false

# Resource Configuration
HOP_MEMORY_LIMIT=1G
HOP_CPU_LIMIT=0.5
HOP_MAX_CHILDREN=10
RESTART_POLICY=unless-stopped

# Development Features
HOP_DEBUG_ENABLED=true
HOP_DEBUG_PORT=5005
HOP_VOLUME_PERMISSIONS=rw

# Google Cloud Configuration
GOOGLE_CLOUD_PROJECT=arquitetura-liderancas
GOOGLE_SERVICE_ACCOUNT_EMAIL=arquitetura-liderancas-homolog@arquitetura-liderancas.iam.gserviceaccount.com

# Google Cloud Service Account JSON (for production)
# Set this to the full JSON content of your service account key file
# Example: GOOGLE_APPLICATION_CREDENTIALS_JSON={"type":"service_account","project_id":"arquitetura-liderancas",...}
GOOGLE_APPLICATION_CREDENTIALS_JSON=

# GCloud Config Path (Development only)
GCLOUD_CONFIG_PATH=C:/Users/alessandra.guedes/AppData/Roaming/gcloud

# Java Options
JAVA_OPTS=-Xmx1G -XX:+UseG1GC -Djava.net.preferIPv4Stack=true -Djava.awt.headless=true -Dio.netty.tryReflectionSetAccessible=false -Dio.netty.noUnsafe=true -Dio.netty.native.workdir=/tmp -Dgrpc.netty.useCustomAllocator=false -Dio.netty.transport.noNative=true